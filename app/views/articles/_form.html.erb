<div class="container">
 <%= render 'shared/error', obj: @article %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label " %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Article Title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label " %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 20, class: "form-control shadow rounded", placeholder: "Article Discription" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-success btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
  </div>
  </div>
</div>
